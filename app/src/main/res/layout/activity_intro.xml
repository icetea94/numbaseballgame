<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#000000"
    tools:context=".IntroActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number Baseball"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textSize="40sp"
        android:textStyle="bold"/>


    <TextView android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="(숫자 야구)"
        android:padding="8dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#FFFFFF">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/baseballer"/>

        <ImageView
            android:id="@+id/test"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/baseball_back"/>

        <TextView
            android:id="@+id/text"
            android:layout_alignBottom="@+id/test"
            android:layout_alignLeft="@+id/test"
            android:layout_alignRight="@+id/test"
            android:layout_alignTop="@+id/test"
            android:gravity="center"
            android:text="3"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:padding="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>





    </RelativeLayout>

    <Button android:id="@+id/button"
        android:layout_marginTop="100dp"
        android:background="#87CEEB"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="시 작 하 기"
        android:textStyle="bold"
        android:textSize="20sp"
        android:onClick="start"
        android:textColor="#000000"/>


</LinearLayout>